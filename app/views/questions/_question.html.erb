<div class="row u-mb-2">
  <div class="u-dividerBottomSmall">
    <div class="small-12 columns">
      <h4>
        <% if question.anonymous_flag == true %>
          Anonymous
        <% else %>
          <%= question.user.name %>
        <% end %> asks:
      </h4>
      <div class="small-10 columns">
        <p>"<%= question.copy %>"</p>
        <div class="row u-mt-2">
          <div class="small-6 columns">
            <a href="viewResponse">View response</a> <a href="response">Post a response</a>
          </div>
        </div>
      </div>
      <div class="small-2 columns">
        <div class="row u-mb-2">
          <%= pluralize(question.votes.where("type_of LIKE ?", 'up').count, 'vote') %>
          <% if @user.votes.where("question_id = ?", question.id).where("type_of LIKE ?", 'up').empty? %>
          <%= link_to '', upvote_question_path(question.id), { method: :post, class: 'Button Button--outline Button--green Button--icon Icon--check', :'data-toggle' => 'tooltip', :'data-placement' => 'top', title: 'Upvote' } %>
          <% else %>
            <a class="Button Button--green Button--icon Icon--check"></a>
          <% end %>
        </div>
        <div class="row u-mb-2">
          <%= pluralize(question.votes.where("type_of LIKE ?", 'down').count, 'vote') %>
          <% if @user.votes.where("question_id = ?", question.id).where("type_of LIKE ?", 'down').empty? %>
            <%= link_to '', downvote_question_path(question.id), { method: :post, class: 'Button Button--outline Button--red Button--icon Icon--close', :'data-toggle' => 'tooltip', :'data-placement' => 'bottom', title: 'Downvote' } %>
          <% else %>
            <a class="Button Button--red Button--icon Icon--close"></a>
          <% end %>
        </div>
        <div class="row">
          <a href="flag">Flag as inappropriate</a>
        </div>
      </div>
    </div>
  </div>
</div>