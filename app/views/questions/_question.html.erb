<div class="row u-dividerBottomSmall u-mb-3">
  <div class="small-12 columns">
    <div class="row">
      <div class="small-12 columns">
        <h4>
          <% if question.anonymous_flag == true %>
          Anonymous
          <% else %>
          <%= question.user.name %>
          <% end %> asks:
        </h4>
      </div>
    </div>
    <div class="row u-mb-1">
      <div class="small-10 columns">
        <p>"<%= question.copy %>"</p>
      </div>
      <div class="small-2 columns u-textAlignCenter">
        <div class="row u-mb-2">
          <% if @user.votes.where("question_id = ?", question.id).where("type_of LIKE ?", 'up').empty? %>
          <%= link_to '', upvote_question_path(question.id), { method: :post, class: 'Button Button--outline Button--green Button--icon Icon--arrowUp', :'data-toggle' => 'tooltip', :'data-placement' => 'top', title: 'Upvote' } %>
          <% else %>
          <a class="Button Button--green Button--icon Icon--arrowUp"></a>
          <% end %>
        </div>
        <div class="row u-mb-2">
        <p><%= question.votes.where("type_of LIKE ?", 'up').count - question.votes.where("type_of LIKE ?", 'down').count %></p>
        </div>
        <div class="row u-mb-2">
          <% if @user.votes.where("question_id = ?", question.id).where("type_of LIKE ?", 'down').empty? %>
          <%= link_to '', downvote_question_path(question.id), { method: :post, class: 'Button Button--outline Button--red Button--icon Icon--arrowDown', :'data-toggle' => 'tooltip', :'data-placement' => 'bottom', title: 'Downvote' } %>
          <% else %>
          <a class="Button Button--red Button--icon Icon--arrowDown"></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="small-6 columns">
        <p class="small">
          <% if policy(question).edit? %>
          <%= link_to 'Edit Question', edit_question_path(question.id) %>
          <% end %>
          <% if question.responses.count > 0 %>
          <%= link_to "View #{'response'.pluralize(question.responses.count)} (#{question.responses.count.to_s})", question_responses_path(question.id) %>
          <% end %>
          <%= link_to 'Post a response', new_question_response_path(question.id) %>
        </p>
      </div>
    </div>
  </div>
</div>