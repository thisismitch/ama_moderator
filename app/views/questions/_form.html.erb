<%= form_for @question do |f| %>
  <p>
    <%= f.label :copy %><br>
    <%= f.text_area :copy %>
  </p>
  <p>
    <%= f.label :real_name %><br>
    <%= f.radio_button :anonymous_flag, false %>
  </p>
  <p>
    <%= f.label :anonymous_flag, 'Anonymous' %><br>
    <%= f.radio_button :anonymous_flag, true %>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>