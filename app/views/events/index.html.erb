<div class="row">
  <div class="small-12 columns">
    <h2>View events</h2>
  </div>
</div>

<% @events.each do |event| %>
<div class="row">
	<div class="small-12 columns">
  <ul>
    <li><%= link_to event.name, event_path(event.id) %></li>
  </ul>
  </div>
</div>
<% end %>

<% if policy(@events).create? %>
  <div class="row">
  	<div class="small-12 columns">
    <h3>Admin:</h3>
    <p><%= link_to 'Create new event', new_event_path %></p>
    </div>
  </div>
<% end %>